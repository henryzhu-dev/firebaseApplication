<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainV3Activity">

    <Button
        android:id="@+id/btnThrowException"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Throw exception!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        app:layout_constraintEnd_toEndOf="@+id/btnThrowException"
        app:layout_constraintStart_toStartOf="@+id/btnThrowException"
        app:layout_constraintTop_toBottomOf="@+id/btnThrowException" />


</androidx.constraintlayout.widget.ConstraintLayout>